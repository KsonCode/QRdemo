<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QRActivity">

    <Button app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="跳转"
            android:id="@+id/btn_toscan" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/et_scan" android:layout_width="match_parent" android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@+id/btn_toscan"/>


    <Button app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_scan"
            android:text="生成二维码"
            android:id="@+id/btn_product" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <ImageView android:id="@+id/iv_scan" app:layout_constraintLeft_toLeftOf="parent" android:layout_width="200dp" android:layout_height="200dp"
               app:layout_constraintTop_toBottomOf="@+id/btn_product"/>
    <Button app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="生成二维码" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>